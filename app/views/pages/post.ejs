<% include ../inc/header %>
<!-- Page Content -->
  <div class="container">

    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4"><%= dados[0].titulo %></h1>

        <!-- Author -->
        <p class="lead">
          by
          <a href="#"><%= dados[0].autor %></a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on <%= dados[0].datac %> at <%= dados[0].horac %></p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">

        <hr>

        <!-- Post Content -->
        <p class="lead"><%= dados[0].corpo %></p>

        <hr>

        <!-- Comments Form -->
        <div class="card my-4">
          <h5 class="card-header">Leave a Comment:</h5>
          <div class="card-body">
            <form method="post" action="/comenta/post">
              <div class="form-group">
                <input type="hidden" name="id_post" value="<%= dados[0].id %>">
                <textarea class="form-control" name="comentario" rows="3"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>

        <!-- Single Comment -->
        
        

        <% for(var i = 0;comentarios.length > i;i++){ %>
        <div class="media mb-4">
          <!-- <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt=""> -->
          <div class="media-body">


            <h5 class="mt-0"><%= comentarios[i].id %></h5>
            <%= comentarios[i].comentario %>


          </div>
        </div>
        <% } %>


        <!-- Comment with nested comments -->
      </div>

      <!-- Sidebar Widgets Column -->
      <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
          <h5 class="card-header">Search</h5>
          <div class="card-body">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-secondary" type="button">Go!</button>
              </span>
            </div>
          </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
          <h5 class="card-header">Categories</h5>
          <div class="card-body">
            <div class="row">
              <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                    <% for(var i = 0;cat.length > i;i++){ %>
                        <li>
                            <a href="/categorias/<%= cat[i].id %>"><%= cat[i].nome %></a>
                        </li>
                    <% } %>
                </ul>
              </div>
              <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Side Widget -->

      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->
