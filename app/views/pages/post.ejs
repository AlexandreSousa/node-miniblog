<% include ../inc/header %>
<!-- Page Content -->
  <div class="container">

    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4"><%= dados[0].titulo %></h1>

        <!-- Author -->
        <p class="lead">
          by
          <a href="#"><%= dados[0].autor %></a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on <%= dados[0].datac %> at <%= dados[0].horac %></p>

        <hr>

        <!-- Preview Image -->
